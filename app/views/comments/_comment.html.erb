<li class="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user, class: "user-name"%></span>
  <span class="content">
    <%= comment.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %>
    <% if current_user?(comment.user) %>
      <%= link_to "Delete comment", [@micropost, comment], class: "delete-micropost",
                  data: { "turbo-method": :delete,
                          turbo_confirm: "Are you sure?" } %>
    <% end %>
  </span>
</li>
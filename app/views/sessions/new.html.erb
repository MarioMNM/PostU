<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>
      <div class="input-group">
        <input type="text" class="input" placeholder= " "
        name="session[email]" id="session_email"/>
        <label for="session_email" class="placeholder">Email</label>
      </div>
      <div class="input-group">
        <input class="input-password" type="password" placeholder= " "
        name="session[password]" id="session_password">
        <label for="session_password" class="placeholder2">Password</label>
      </div>
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
          <span style="padding-left: 100px;"><%= link_to "Did you forget your password?", new_password_reset_path %></span>
        <% end %>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>